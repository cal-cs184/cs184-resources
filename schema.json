{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "topics": {
      "type": "object",
      "patternProperties": {
        "[a-zA-Z_]": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the topic"
            },
            "includes": {
              "type": "array",
              "description": "Mini-topics covered in the topic category",
              "items": {
                "type": "string"
              }
            },
            "pass": {
              "type": "boolean",
              "description": "True if the topic does not allow resources to be listed under"
            }
          },
          "additionalProperties": false,
          "required": [
            "name"
          ]
        }
      },
      "additionalProperties": false
    },
    "resources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "link": {
            "type": "string"
          },
          "authors": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "type": {
            "type": "string",
            "enum": [
              "slides",
              "demo",
              "document"
            ]
          },
          "event": {
            "type": "string",
            "enum": [
              "discussion",
              "special_topics",
              "n/a"
            ]
          },
          "semester": {
            "type": "string",
            "pattern": "^[a-z]{2}[0-9]{2}$"
          },
          "topics": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[a-zA-Z_]+$"
            }
          }
        },
        "required": [
          "name",
          "link",
          "type",
          "event"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "topics",
    "resources"
  ],
  "additionalProperties": false
}